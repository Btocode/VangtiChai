<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/inputAmount"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="#ddd"
        android:id="@+id/givenAmount"
        android:text=""
        app:layout_constraintBottom_toBottomOf="@+id/titleText"
        app:layout_constraintLeft_toRightOf="@+id/titleText"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/titleText"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/titleText"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="#ddd"
        android:text="@string/taka"
        android:textAlignment="center"
        android:textColor="#616161"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.209"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.143" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="65dp"
        android:layout_height="55dp"
        android:layout_marginStart="148dp"
        android:layout_marginTop="84dp"
        android:text="@string/_1"
        app:layout_constraintRight_toLeftOf="@id/btn2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        tools:ignore="DuplicateSpeakableTextCheck,UsingOnClickInXml"
        android:onClick="clickedOne"
        />

    <Button
        android:id="@+id/btn2"
        android:layout_width="65dp"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:text="@string/_2"
        android:onClick="clickedTwo"
        app:layout_constraintLeft_toRightOf="@id/btn1"
        app:layout_constraintTop_toTopOf="@+id/btn1" />
    <Button
        android:id="@+id/btn3"
        android:layout_width="65dp"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:text="@string/_3"
        android:onClick="clickedThree"
        app:layout_constraintLeft_toRightOf="@id/btn2"
        app:layout_constraintTop_toTopOf="@+id/btn2" />
    <Button
        android:id="@+id/btn4"
        android:layout_width="65dp"
        android:layout_height="55dp"
        android:layout_marginStart="148dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="100dp"
        android:text="@string/_4"
        android:onClick="clickedFour"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn1"
        />
    <Button
        android:id="@+id/btn5"
        android:layout_width="65dp"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:text="@string/_5"
        android:onClick="clickedFive"
        app:layout_constraintLeft_toRightOf="@id/btn4"
        app:layout_constraintTop_toTopOf="@+id/btn4" />
    <Button
        android:id="@+id/btn6"
        android:layout_width="65dp"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:text="@string/_6"
        android:onClick="clickedSix"
        app:layout_constraintLeft_toRightOf="@id/btn5"
        app:layout_constraintTop_toTopOf="@+id/btn5" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="65dp"
        android:layout_height="55dp"
        android:layout_marginStart="148dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="100dp"
        android:text="@string/_7"
        android:onClick="clickedSeven"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn4"
        />
    <Button
        android:id="@+id/btn8"
        android:layout_width="65dp"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:text="@string/_8"
        android:onClick="clickedEight"

        app:layout_constraintLeft_toRightOf="@id/btn7"
        app:layout_constraintTop_toTopOf="@+id/btn7" />
    <Button
        android:id="@+id/btn9"
        android:layout_width="65dp"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:text="@string/_9"
        android:onClick="clickedNine"
        app:layout_constraintLeft_toRightOf="@id/btn8"
        app:layout_constraintTop_toTopOf="@+id/btn8" />
    <Button
        android:id="@+id/btn0"
        android:layout_width="65dp"
        android:layout_height="55dp"
        android:layout_marginStart="148dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="100dp"
        android:text="@string/_0"
        android:onClick="clickedZero"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn7"
        />
    <Button
        android:id="@+id/btnClear"
        android:layout_width="152dp"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:text="@string/clear"
        android:onClick="clearView"
        app:layout_constraintLeft_toRightOf="@id/btn0"
        app:layout_constraintTop_toTopOf="@+id/btn0" />

    <TextView
        android:id="@+id/ct500"
        android:layout_width="55dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="88dp"
        android:text=""
        android:textAlignment="center"
        app:layout_constraintLeft_toRightOf="@id/nt500"
        app:layout_constraintTop_toBottomOf="@id/titleText" />

    <TextView
        android:id="@+id/nt100"
        android:layout_width="55dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="@string/_100"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nt500" />

    <TextView
        android:id="@+id/ct100"
        android:layout_width="55dp"
