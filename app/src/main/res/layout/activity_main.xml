        android:text=""
        android:textAlignment="center"
        app:layout_constraintLeft_toRightOf="@id/nt50"
        app:layout_constraintTop_toBottomOf="@id/nt100" />

    <TextView
        android:id="@+id/nt2"
        android:layout_width="55dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/__2"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nt5" />

    <TextView
        android:id="@+id/nt500"
        android:layout_width="55dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="88dp"
        android:text="@string/_500"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleText" />

    <TextView
        android:id="@+id/ct5"
        android:layout_width="55dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text=""
        android:textAlignment="center"
        app:layout_constraintLeft_toRightOf="@id/nt5"
        app:layout_constraintTop_toBottomOf="@id/nt10" />


